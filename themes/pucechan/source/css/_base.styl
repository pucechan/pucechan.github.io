html,
body
    color $theme-text-colour
    background-color $theme-background
    font-family $body-font
    font-size 1em

a
    color $theme-colour
    &:hover
        text-decoration: none
        color-revert()
        transition all .25s
        cursor pointer

strong
    color $colour-white

em, i
    color $colour-white

h1, h2, h3, h4, h5, h6
    font-family $header-font
    color $colour-white